<apex:page >
    <style type="text/css">
        #vf-body .outer,
        #vf-body .outerNoSidebar {
            background: #1e5799; /* Old browsers */
            background: -moz-linear-gradient(top,  #1e5799 99%, #2989d8 100%, #7db9e8 100%); /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(99%,#1e5799), color-stop(100%,#2989d8), color-stop(100%,#7db9e8)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top,  #1e5799 99%,#2989d8 100%,#7db9e8 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top,  #1e5799 99%,#2989d8 100%,#7db9e8 100%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top,  #1e5799 99%,#2989d8 100%,#7db9e8 100%); /* IE10+ */
            background: linear-gradient(to bottom,  #1e5799 99%,#2989d8 100%,#7db9e8 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1e5799', endColorstr='#7db9e8',GradientType=0 ); /* IE6-9 */
        }
                
        #vf-page {
            min-height: 200px;
        }
        
        #vf-page * {
            font-family: 'メイリオ', sans-serif;
            color: #FFFFFF;
        }
        
        #vf-page .linkBtn {
            -webkit-border-radius: 5px; 
            -moz-border-radius: 5px; 
            border-radius: 5px;
            border: solid 1px #2A94D6;
            padding: 5px 20px;
            font-weight: bold;
            color: #FFFFFF;
            background-color: #2A94D6;
            text-decoration: none;
            margin-left: 10px;
            display: inline-block;
        }
        #vf-page .linkBtn:hover {
            opacity: 0.7;
        }
    </style>
</apex:page>